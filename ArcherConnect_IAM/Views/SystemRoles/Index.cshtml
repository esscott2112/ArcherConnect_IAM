@model IEnumerable<ArcherConnect_IAM.Models.SystemRole>

@{
    ViewBag.Title = "Index";
}

<h2>System Roles</h2>
<h3>These are System Roles.  Roles are groups of System Users (credentials).  Permissions can be applied to Roles and thus apply to the credentials in the role.</h3>
<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.RoleName)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.RoleName)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
